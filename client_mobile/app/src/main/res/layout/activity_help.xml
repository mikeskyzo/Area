<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Help">

            <ImageButton
                android:id="@+id/imageButtonBack"
                android:layout_width="73dp"
                android:layout_height="63dp"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_arrow_back_orange_24dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="317dp"
                android:layout_height="313dp"
                android:layout_marginTop="60dp"
                android:gravity="start"
                android:text="In ordrer to create an area, you first need to register to the available services.\n\nThen, click on the &quot;CreateArea&quot; button on the navigation view on the left of the screen.\n\nAccording to the services you subscribed to, you should see a list of actions, pick one.\n\n Next, fill up the fields containing the parameters of the action you chose.\n\nYou must do the same thing to set a reaction.\nAfter that, you have to set an area name and a color for this area.\n\nClick on the button &quot;Create an Area&quot; and here you go your area is created."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="320dp"
                android:layout_height="139dp"
                android:layout_marginTop="64dp"
                android:gravity="start"
                android:text="Your areas are displayed on the main page, the two icons represents the services of the action and reaction of the area, and the button leads you to a view of the area's informations in which you can delete it.\n\nIf you don't see anything but the navbar on top of the screen, it means that you don't have any area.\n\n"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.527"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="316dp"
                android:layout_height="106dp"
                android:layout_marginTop="44dp"
                android:gravity="start"
                android:text="You can click on the &quot;User informations&quot; button to get your username and all the services you subscribed to.\n\nClick on a cross next to a service to unsubscribe from this one."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="174dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>